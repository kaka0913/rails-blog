<h1>Sign In</h1>

<%= form_with url: signin_path, local:true do |form| %>
    <div>
        <%= form.label :email, 'Email' %><br>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :name, "ユーザ名"%><br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.submit 'Sign In' %>
    </div>
<% end %>

<%= link_to 'Sign Up', new_user_path %>